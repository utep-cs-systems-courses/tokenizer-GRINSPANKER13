# for convenience, define variable $(OBJS) to list of object files
OBJS= history.o tokenizer.o uimain.o
OBJS2= history.o tokenizer.o tester.o

# compiler flags.  -g for debug, -O3 for optimization
CFLAGS=-g -O3

# first target is built by default.  Usually named "all"
all: uimain tester

# uimain (target) depends on all object files (prerequisites)
uimain: $(OBJS)
	cc -o uimain $(CFLAGS) $(OBJS)
tester: $(OBJS2)
	cc -o tester $(CFLAGS) $(OBJS2)

# all object files built from c files that include tokenizer.h
$(OBJS): history.h tokenizer.h

# deletes files generated by compilation
clean:
	rm -f *.o uimain tester

run:uimain
	./uimain
